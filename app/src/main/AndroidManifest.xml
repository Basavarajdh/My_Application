<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">

        <!-- Sign-In Activity (Launcher) -->
        <activity
            android:name=".SignInActivity"
            android:exported="true"> <!-- Explicitly set exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- No intent-filter, not exposed -->

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- No intent-filter, not exposed -->

        <!-- Indoor Games Activity -->
        <activity
            android:name=".IndoorGamesActivity"
            android:exported="false" /> <!-- No intent-filter, not exposed -->

        <!-- Outdoor Games Activity -->
        <activity
            android:name=".OutdoorGamesActivity"
            android:exported="false" /> <!-- No intent-filter, not exposed -->
        <activity android:name=".ChessActivity" />
        <activity android:name=".CricketActivity" />

    </application>



</manifest>