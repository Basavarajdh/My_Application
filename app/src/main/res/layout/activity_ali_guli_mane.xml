<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#F3F4F6">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Player 1's Turn"
        android:textSize="24sp"
        android:textColor="#1E3A8A"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Player 2's column of pits -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/pit12"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit11"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit10"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit9"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit8"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit7"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Player 1's column of pits -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="8dp">

            <Button
                android:id="@+id/pit0"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit1"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit2"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit3"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit4"
                style="@style/PitButtonStyle"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit5"
                style="@style/PitButtonStyle" />
        </LinearLayout>
    </LinearLayout>

    <!-- Mancalas and labels -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mancala (P2)"
                android:textSize="16sp"
                android:textColor="#1E3A8A"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit13"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:backgroundTint="#E5E7EB" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mancala (P1)"
                android:textSize="16sp"
                android:textColor="#1E3A8A"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/pit6"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:backgroundTint="#E5E7EB" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/instructionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Play"
        android:layout_marginTop="24dp"
        android:backgroundTint="#1E3A8A"
        android:textColor="#FFFFFF" />
</LinearLayout>